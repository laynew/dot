#!/bin/bash

level=$(cat /sys/class/power_supply/BAT0/capacity)
state=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep state | awk '{print $2}')

if [[ $state == "charging" || $state == "fully-charged" ]]; then
    printf "ðŸ”Œ"
elif [[ $level -gt 20 ]]; then
    printf "ðŸ”‹"
else
    printf "ðŸª«";
fi

printf " $level%%"

